<%= form_with model: @product do |form| %>
  <div class="container">
    <h1 class="text-center"> Product </h1>
    <div class="row">  
      <div class="col-4">
        <%= form.label :product_name %><br>
        <%= form.text_field :product_name , class:"form-control" %>
        <span class="error"> 
          <%= custom_error(@product, :product_name) %> 
        </span>
      </div>
    </div><br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :description %><br>
        <%= form.text_area :description, class:"form-control" %>
        <span class="error">
          <%= custom_error(@product, :description) %>
        </span>
      </div>
    </div> <br/>

    <div class="row">
      <div class="col-4">
        <%= form.label :price%><br>
        <%= form.number_field :price, class:"form-control" %>
        <span class="error">  
          <%= custom_error(@product, :price) %>
        </span>
      </div>
    </div> <br/>

    <div>
      <%= form.submit 'Insert data', class:"btn btn-primary" %>
    </div>
  </div>

<% end %>