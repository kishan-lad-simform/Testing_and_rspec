<div class="container text-center">
  <div class="row justify-content-md-center">
    <div class="row">
      <div class="col">
        <%= link_to "Add Product", new_test_product_path %>
      </div>
      <div class="col">
        <%= link_to "All Product", all_products_path  %>
      </div>
      <div class="col">
        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
      </div>
    </div>
    
    <h2> Products </h2>
    <div class="col"> 
      <table class="table table-striped">
        <thead>
          <tr>  
            <th scope="col"> Id </th>
            <th scope="col"> Product name </th>
            <th scope="col"> Description </th>
            <th scope="col"> Price </th> 
            
            <th colspan=2></th>  
        </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td> <%= product.id %> </td>
              <td> <%= product.product_name %> </td>
              <td> <%= product.description %> </td>
              <td> <%= product.price %> </td>
              
              <td> <%= link_to "Update record",
                               edit_test_product_path(product.id),
                               class: "btn btn-primary" %> </td>
              <td> <%= link_to "Delete record",
                               test_product_path(product.id),
                               data: { turbo_method: :delete,
                                       turbo_confirm: "Confirmation for delete the product" },
                               class: "btn btn-primary" %> </td> 
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>